script/source = "extends CharacterBody2D

const Atk_Dmg = 5
var projectile


func _ready():
	$SpawnSound.play()
	if velocity.x < 0:
		scale.x = -1
		
func _physics_process(_delta):
	if GameState.freezeframe == false:
		move_and_slide()

func _on_visible_on_screen_notifier_2d_screen_exited():
	queue_free()

func destroy():
	$CollisionShape2D.set_deferred(\"disabled\", true)
	#$HitSound.play()
	velocity.x = 0
	velocity.y = 0
	$AnimatedSprite2D.play(\"Destroy\")
	await $AnimatedSprite2D.animation_finished
	queue_free()

func _on_hurt_body_entered(body):
	if body.is_in_group(\"player\"):
		body.DmgQueue = Atk_Dmg
	if body.is_in_group(\"scorch\"):
		if GameState.character_selected != 2:
			body.durability -= 3
		else:
			body.durability -= 2

func _on_reflect_body_entered(weapon):
	match weapon.W_Type:
		GameState.DMGTYPE.CR_BUSTER_3:
			# Do nothing
			pass
		GameState.DMGTYPE.MD_ORIGAMI:
			# Do nothing
			pass
		GameState.DMGTYPE.CB_GALE:
			# Do nothing
			pass
		GameState.DMGTYPE.CB_REAPER_2:
			# Do nothing
			pass
		GameState.DMGTYPE.CR_SHARK2:
			# Destroy both!
			destroy()
			weapon.destroy()
		_:
			weapon.destroy()
"

